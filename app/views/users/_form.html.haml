= form_for @user, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :first_name, :class => 'control-label'
    .controls
      = f.text_field :first_name, :class => 'text_field'
  .control-group
    = f.label :last_name, :class => 'control-label'
    .controls
      = f.text_field :last_name, :class => 'text_field'
  .control-group
    = f.label :unique_identifier, :class => 'control-label'
    .controls
      = f.text_field :unique_identifier, :class => 'text_field'
  .control-group
    = f.label :user_type, :class => 'control-label'
    .controls
      = f.text_field :user_type, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), users_path, :class => 'btn'
